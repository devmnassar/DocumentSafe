@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}





<div class="card shadow border-0 mt-5">
	<div class="card-header bg-primary bg-gradient ml-0 py-4">
		<div class="row text-center">
			<h2 class="text-white">Create a new account.</h2>
		</div>
	</div>
	<div class="card-body">

			<div class="col-md-12">
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="row">
					<div class="col-6">
						<div class=" form-floating mb-3">
							<input asp-for="Input.UserName" class="form-control" autocomplete="" aria-required="true" placeholder="" />
							<label asp-for="Input.UserName">User Name</label>
							<span asp-validation-for="Input.UserName" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							<input asp-for="Input.FullName" class="form-control" autocomplete="FullName" aria-required="true" placeholder="" />
							<label asp-for="Input.FullName">Full Name</label>
							<span asp-validation-for="Input.FullName" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<div class="form-floating mb-3">
							<input asp-for="Input.Email" class="form-control" autocomplete="" aria-required="true" placeholder="name@example.com" />
							<label asp-for="Input.Email">Email</label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class=" form-floating mb-3">
							<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
							<label asp-for="Input.Password">Password</label>
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6">
						<div class=" form-floating mb-3">
							<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
							<label asp-for="Input.ConfirmPassword">Confirm Password</label>
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<div class="form-floating mb-3">
							<input asp-for="Input.StreetAddress" class="form-control" autocomplete="StreetAddress" aria-required="true" placeholder="" />
							<label asp-for="Input.StreetAddress">StreetAddress</label>
							<span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<div class=" form-floating mb-3">
							<input asp-for="Input.City" class="form-control" autocomplete="City" aria-required="true" placeholder="" />
							<label asp-for="Input.City">City</label>
							<span asp-validation-for="Input.City" class="text-danger"></span>
						</div>
					</div>
					<div class="col-4">
						<div class=" form-floating mb-3">
							<input asp-for="Input.State" class="form-control" autocomplete="State" aria-required="true" placeholder="" />
							<label asp-for="Input.State">State</label>
							<span asp-validation-for="Input.State" class="text-danger"></span>
						</div>
					</div>
					<div class="col-4">
						<div class="form-floating mb-3">
							<input asp-for="Input.PostalCode" class="form-control" autocomplete="PostalCode" aria-required="true" placeholder="" />
							<label asp-for="Input.PostalCode">Postal Code</label>
							<span asp-validation-for="Input.PostalCode" class="text-danger"></span>
						</div>
					</div>
				</div>
				<button id="registerSubmit" type="submit" class="mt-3 w-100 btn btn-lg btn-primary">Register</button>
			</form>

			</div>



	</div>
</div>

<div class="container">

	<div class="row pt-5">
		<div class="">
			<section>
				<h3>Use another service to register.</h3>
				<hr />
				@{
					if ((Model.ExternalLogins?.Count ?? 0) == 0)
					{
						<div>
							<p>
								There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
									article
									about setting up this ASP.NET application to support logging in via external services
								</a>.
							</p>
						</div>
					}
					else
					{
						<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
							<div>
								<p>
									@foreach (var provider in Model.ExternalLogins!)
									{
										<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
									}
								</p>
							</div>
						</form>
					}
				}
			</section>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
