@model UserManageVM

<div class="card shadow border-0 mt-5">
	<div class="card-header bg-primary bg-gradient ml-0 py-4">
		<div class="row text-center">
			<h2 class="text-white">Edit User</h2>
		</div>
	</div>
	<div class="card-body">

		<div class="col-md-12">
			<form method="post" asp-action="Edit" asp-controller="UsersManagement">
				<input asp-for="@Model.ApplicationUser.Id" hidden />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="row">
					<div class="col-6">
						<div class=" form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.UserName" class="form-control" autocomplete="" aria-required="true" placeholder="" />
							<label asp-for="@Model.ApplicationUser.UserName">User Name</label>
							<span asp-validation-for="@Model.ApplicationUser.UserName" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.FullName" class="form-control" autocomplete="" aria-required="true" placeholder="e.g. Mike Shinoda" />
							<label asp-for="@Model.ApplicationUser.FullName">Full Name</label>
							<span asp-validation-for="@Model.ApplicationUser.FullName" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.Email" class="form-control" autocomplete="" aria-required="true" placeholder="name@example.com" />
							<label asp-for="@Model.ApplicationUser.Email">Email</label>
							<span asp-validation-for="@Model.ApplicationUser.Email" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6">

						<div class="form-floating mb-3">

							<select class="form-select" asp-for="@Model.ApplicationUser.Role" asp-items="@Model.RoleList">
								<option selected> @Model.ApplicationUser.Role </option>
							</select>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-12">
						<div class="form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.StreetAddress" class="form-control" autocomplete="" aria-required="true" placeholder="123 Main Street" />
							<label asp-for="@Model.ApplicationUser.StreetAddress">StreetAddress</label>
							<span asp-validation-for="@Model.ApplicationUser.StreetAddress" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-4">
						<div class=" form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.City" class="form-control" autocomplete="City" aria-required="true" placeholder="Cairo" />
							<label asp-for="@Model.ApplicationUser.City">City</label>
							<span asp-validation-for="@Model.ApplicationUser.City" class="text-danger"></span>
						</div>
					</div>
					<div class="col-4">
						<div class=" form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.State" class="form-control" autocomplete="State" aria-required="true" placeholder="GH" />
							<label asp-for="@Model.ApplicationUser.State">State</label>
							<span asp-validation-for="@Model.ApplicationUser.State" class="text-danger"></span>
						</div>
					</div>
					<div class="col-4">
						<div class="form-floating mb-3">
							<input asp-for="@Model.ApplicationUser.PostalCode" class="form-control" autocomplete="PostalCode" aria-required="true" placeholder="e.g. 315111" />
							<label asp-for="@Model.ApplicationUser.PostalCode">Postal Code</label>
							<span asp-validation-for="@Model.ApplicationUser.PostalCode" class="text-danger"></span>
						</div>
					</div>
				</div>
				<button type="submit" class="mt-3 w-100 btn btn-lg btn-primary">Save</button>
			</form>

		</div>



	</div>
</div>

