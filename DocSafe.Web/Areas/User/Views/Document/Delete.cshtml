@using DocSafe.Model.Models
@model Document

<h2>Document Details</h2>
<input hidden asp-for="Id" />
<table class="table table-bordered">
    <tr><th width="15%">Document Name</th><td>@Model.Name</td></tr>
    <tr><th width="15%">Uploaded Date</th><td>@Model.Added.ToString("yyyy-MM-dd")</td></tr>
    <tr><th width="15%">Type</th><td>@Model.Type</td></tr>
    <tr><th width="20%">Note</th><td>@Model.Note</td></tr>
</table>

<h3>PDF Preview</h3>
<iframe src="@ViewBag.PdfUrl" width="100%" height="600px"></iframe>




<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete !!" class="btn btn-danger" /> |
    <a class="btn btn-secondary" asp-area="User" asp-controller="Document" asp-action="Index">Back To List</a>
</form>
